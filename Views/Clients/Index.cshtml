@model IEnumerable<NBDv2.Models.Client>

@{
    ViewData["Title"] = "Index";
}

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1>Clients</h1>
            </div>
            <div class="col-sm text-right">
                <a asp-action="Create" class="btn btn-success btn-lg">New Client</a>
            </div>
        </div>
    </div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
			<td>
				<a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-success float-right">Details</a>
				<a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-success float-right">Edit</a>
			</td>
        </tr>
}
    </tbody>
</table>
