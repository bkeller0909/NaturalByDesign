@model IEnumerable<NBDv2.Models.Inventory>

@{
    ViewData["Title"] = "Inventory";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvgNetPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Material.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgNetPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
