@model NBDv2.Models.Project


@{
    ViewData["Title"] = "DailyReport";
}

<h1>DailyReport</h1>
<form asp-action="DailyReport">
    <label class="control-label">Select by Date:</label>
    @Html.DropDownList("Dates", null, new { @value = ViewData["Date"] })
    <button value="submit"></button>
</form>
<div id="materials">
</div>
<div id="labours">
    @Html.RenderPartialAsync("/Projects/_ListOfMaterials.cshtml", Model, ViewBag.Date)
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#materials').load('/Projects/ProdReportMaterials/@Model.ID');
            $()
        })

    </script>
    <script type="text/javascript">
        $(document).ready(function () {
