@model IEnumerable<NBDv2.Models.Project>

@{
    ViewData["Title"] = "Index";
}

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1>Production Plans</h1>
            </div>
            <div class="col-sm text-right">
                <a asp-action="Create"><button class="btn btn-success btn-lg">New Plan</button></a>
            </div>
        </div>


    </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Client.ConFirst)
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.ID"><button class="btn btn-outline-success float-right">Details</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>
